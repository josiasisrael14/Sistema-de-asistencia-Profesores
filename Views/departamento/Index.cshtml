    function editar(iddepartamento) { 
        //alert(iddepartamento);
       
    $.ajax({

        //url:"/recuperarID/listarid/"+idempleados,
        method:"GET",
        data: {iddepartamento:iddepartamento},
        url:"/departamento/listaridD",
        contentType: false,
        dataType:"json",
        success: function(departamento) {
            
            $('#nombre').val(departamento[0].nombreD);
            $('#descripcion').val(departamento[0].descripcion);
            $('#iddepartamento').val(departamento[0].iddepartamentos);
            $("#modalCajaMov").modal('show');
            $('#respuesta_nombre').attr("style", '');
            $('#respuesta_descripcion').attr("style", '');
        },

        error: function(errormessage) {


            alert(errormessage.responseText);

        }

    });

    return false;


     }



